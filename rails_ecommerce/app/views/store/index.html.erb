<div class="w-full">
  <%= render 'notice' %>
  <h1 class="font-bold text-lg mb-6 pb-2 border-b-2">
    Beer Catalog
  </h1>
  <%= turbo_stream_from 'products' %>
  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render partial: 'product', object: product %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>